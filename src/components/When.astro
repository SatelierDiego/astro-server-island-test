---
// Obtener datos de tiempo desde la API
let timeData;
try {
    const req = await fetch("api/time.json", {
        method: "GET",
        headers: {
            "Content-type": "application/json; charset=UTF-8",
        },
    });

    if (!req.ok) {
        throw new Error("No se obtuvo la hora desde la api");
    }

    timeData = await req.json();
} catch (e) {
    console.log(e);
    // En caso de error, usar hora local como fallback
    timeData = {
        dateTime: new Date().toISOString(),
        timeZone: "America/Argentina/Buenos_Aires",
        utcOffset: "-03:00",
    };
}

// Formatear la fecha y hora
const dateTime = new Date(timeData.dateTime);
const formattedTime = dateTime.toLocaleString("es-AR", {
    weekday: "long",
    year: "numeric",
    month: "long",
    day: "numeric",
    hour: "2-digit",
    minute: "2-digit",
    second: "2-digit",
    timeZone: "America/Argentina/Buenos_Aires",
});

const executionTime = timeData.dateTime;
---

<div
    class="bg-white rounded-lg shadow-md p-6 max-w-md mx-auto border border-gray-200"
>
    <div class="text-center">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">
            ðŸ‡¦ðŸ‡· Hora en Buenos Aires
        </h2>

        <div class="bg-blue-50 rounded-lg p-4 mb-4">
            <p class="text-lg font-semibold text-blue-800">
                {formattedTime}
            </p>
        </div>

        <div class="text-sm text-gray-600">
            <p class="mb-2">
                <span class="font-medium">Zona horaria:</span>
                {timeData.timeZone}
            </p>
            <p class="mb-2">
                <span class="font-medium">UTC Offset:</span>
                {timeData.utcOffset}
            </p>
            <p class="text-xs text-gray-500">
                <span class="font-medium">Obtenido de la API:</span>
                {executionTime}
            </p>
        </div>
    </div>
</div>
